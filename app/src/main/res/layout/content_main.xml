<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tz.shwe.final_project.main"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:id="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal"
        android:height="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rect"
        android:id="@+id/btn_rct"
        android:width="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="circ"
        android:id="@+id/btn_crc"
        android:width="100dp"
        android:layout_alignBaseline="@+id/btn_rct"
        android:layout_alignBottom="@+id/btn_rct"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="clear"
        android:id="@+id/btn_cls"
        android:width="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_bdr"
        android:entries="@array/color_arrays"
        android:prompt="@string/border_color_prompt"
        android:spinnerMode="dialog"
        android:clickable="true"
        android:dropDownWidth="fill_parent"
        android:layout_below="@+id/textView"
        android:layout_toLeftOf="@+id/btn_crc"
        android:layout_toStartOf="@+id/btn_crc" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_fl"
        android:entries="@array/color_arrays"
        android:prompt="@string/fill_color_prompt"
        android:spinnerMode="dialog"
        android:dropDownWidth="fill_parent"
        android:clickable="true"
        android:layout_above="@+id/rltv_lyt"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/btn_crc"
        android:layout_toEndOf="@+id/btn_crc" />

    <RelativeLayout
        android:id="@+id/rltv_lyt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinner_bdr"
        android:layout_above="@+id/btn_crc">

    </RelativeLayout>

</RelativeLayout>
